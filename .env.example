# beme configuration
# Copy this file to beme.toml in the app data directory and fill in your values.
# Windows: %APPDATA%\com.erichansen.beme\beme.toml
# macOS: ~/Library/Application Support/com.erichansen.beme/beme.toml
# Linux: ~/.config/com.erichansen.beme/beme.toml

[azure]
endpoint = "https://YOUR-FOUNDRY-RESOURCE.openai.azure.com"
api_key = "YOUR_API_KEY_HERE"
gpt4o_deployment = "gpt-4o"
realtime_deployment = "gpt-4o-realtime"

[capture]
interval_ms = 2000
max_width = 1024
jpeg_quality = 75

[shortcut]
toggle = "Ctrl+Shift+B"

[prompts]
vision = "You are an AI assistant observing my screen. Analyze what you see and suggest the single best next action I should take. Be specific and actionable."
audio = "You are listening to a conversation. Suggest the best response or follow-up question."
